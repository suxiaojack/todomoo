  SetOutPath "$INSTDIR"
  File "..\Bin\Todomoo\ObjectListView.dll"
  File "..\Bin\Todomoo\sqlite3.dll"
  File "..\Bin\Todomoo\todomoo.exe"

  ; Language
  SetOverwrite off
  SetOutPath "$INSTDIR"
  StrCmp $LANGUAGE ${LANG_ENGLISH} 0 +2
