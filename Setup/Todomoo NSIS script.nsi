    File "th\todomoo.conf"
  StrCmp $LANGUAGE ${LANG_SIMPCHINESE} 0 +2
    File "zh-cn\todomoo.conf"

; Shortcuts
  SetOverwrite try
  !insertmacro MUI_STARTMENU_WRITE_BEGIN Application
  CreateDirectory "$SMPROGRAMS\$ICONS_GROUP"
  CreateShortCut "$SMPROGRAMS\$ICONS_GROUP\Todomoo.lnk" "$INSTDIR\todomoo.exe"
